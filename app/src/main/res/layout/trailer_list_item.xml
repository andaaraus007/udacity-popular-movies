<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ActivityBasicHeightWidth">

    <ImageView
        android:id="@+id/iv_movie_video_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/youtube"
        android:contentDescription="@string/video_description"
        android:paddingTop="@dimen/default_half_padding"
        android:paddingLeft="@dimen/default_half_padding"
        android:paddingRight="@dimen/default_half_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_movie_video_name"/>
    <TextView
        android:id="@+id/tv_movie_video_name"
        android:text="@string/title_of_movie"
        style="@style/RecyclerViewNormal"
        app:layout_constraintLeft_toRightOf="@id/iv_movie_video_image"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_separator_thickness"
        android:background="@color/colorSeparator"
        android:layout_marginLeft="@dimen/default_half_padding"
        android:layout_marginRight="@dimen/default_half_padding"
        android:layout_marginTop="@dimen/default_half_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_video_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>