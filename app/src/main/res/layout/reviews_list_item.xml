<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ActivityBasicHeightWidth">

    <TextView
        android:id="@+id/tv_author_label"
        android:text="@string/author_label"
        style="@style/RecyclerViewNormalBold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_author_name"
        android:text="@string/author_name"
        style="@style/RecyclerViewNormalBold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_author_label"/>
    <TextView
        android:id="@+id/tv_review"
        style="@style/RecyclerViewNormal"
        app:layout_constraintTop_toBottomOf="@id/tv_author_label"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_separator_thickness"
        android:background="@color/colorSeparator"
        android:layout_marginLeft="@dimen/default_half_padding"
        android:layout_marginRight="@dimen/default_half_padding"
        android:layout_marginTop="@dimen/default_half_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_review"/>
</androidx.constraintlayout.widget.ConstraintLayout>